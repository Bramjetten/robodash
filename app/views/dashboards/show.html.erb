<% content_for(:title) { "Robodash: #{@dashboard.name}" } %>

<div class="p-10 bg-zinc-900/60 min-h-screen">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold flex items-center">
      <%= @dashboard.name %>

      <% if issue_count > 0 %>
        <div class="flex items-center text-base text-red-500">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-6 ml-4 mr-2 text-[#f10000] drop-shadow-[0_2px_4px_rgba(255,0,0,0.5)]">
            <path d="M11.983 1.907a.75.75 0 0 0-1.292-.657l-8.5 9.5A.75.75 0 0 0 2.75 12h6.572l-1.305 6.093a.75.75 0 0 0 1.292.657l8.5-9.5A.75.75 0 0 0 17.25 8h-6.572l1.305-6.093Z" />
          </svg>
          <%=t "issues", count: issue_count %>
        </div>
      <% end %>

      <% if warning_count > 0 %>
        <div class="flex items-center text-base text-amber-500">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-6 ml-4 mr-2 text-amber-500 drop-shadow-[0_2px_4px_rgba(255,137,0,0.5)]">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495ZM10 5a.75.75 0 0 1 .75.75v3.5a.75.75 0 0 1-1.5 0v-3.5A.75.75 0 0 1 10 5Zm0 9a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z" clip-rule="evenodd" />
          </svg>

          <%=t "warnings", count: warning_count %>
        </div>
      <% end %>
    </h1>

    <div class="flex items-center space-x-2">
      <button class="flex items-center border border-zinc-700 bg-zinc-900/50 backdrop-blur-sm hover:bg-zinc-800 rounded-lg px-2 py-1">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5 mr-2">
          <path d="M4.214 3.227a.75.75 0 0 0-1.156-.955 8.97 8.97 0 0 0-1.856 3.825.75.75 0 0 0 1.466.316 7.47 7.47 0 0 1 1.546-3.186ZM16.942 2.272a.75.75 0 0 0-1.157.955 7.47 7.47 0 0 1 1.547 3.186.75.75 0 0 0 1.466-.316 8.971 8.971 0 0 0-1.856-3.825Z" />
          <path fill-rule="evenodd" d="M10 2a6 6 0 0 0-6 6c0 1.887-.454 3.665-1.257 5.234a.75.75 0 0 0 .515 1.076 32.91 32.91 0 0 0 3.256.508 3.5 3.5 0 0 0 6.972 0 32.903 32.903 0 0 0 3.256-.508.75.75 0 0 0 .515-1.076A11.448 11.448 0 0 1 16 8a6 6 0 0 0-6-6Zm0 14.5a2 2 0 0 1-1.95-1.557 33.54 33.54 0 0 0 3.9 0A2 2 0 0 1 10 16.5Z" clip-rule="evenodd" />
        </svg>
        <span>Settings</span>
      </button>
    </div>
  </div>

  <div class="bg-zinc-900/50 backdrop-blur grid grid-cols-4 gap-4 rounded-2xl p-4">
    <%= render @dashboard.widgets.order(:name) %>
  </div>
</div>

